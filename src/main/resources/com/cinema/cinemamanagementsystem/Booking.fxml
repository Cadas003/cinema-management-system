<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="700.0" prefWidth="1000.0">

    <top>
        <VBox spacing="5" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Бронирование билетов"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label text="Выбор фильма, сеанса и места"
                   style="-fx-text-fill: #bdc3c7;"/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.3" orientation="HORIZONTAL">

            <!-- Левая панель: выбор фильма и сеанса -->
            <VBox spacing="15" padding="15"
                  style="-fx-background-color: #f8f9fa;">

                <Label text="1. Выберите фильм"
                       style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                <ListView fx:id="filmsListView"
                          prefHeight="200"
                          style="-fx-border-color: #dee2e6; -fx-border-radius: 5;">
                    <placeholder>
                        <Label text="Загрузка фильмов..."/>
                    </placeholder>
                </ListView>

                <Label text="2. Выберите сеанс"
                       style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                <TableView fx:id="showtimesTableView"
                           prefHeight="150"
                           style="-fx-border-color: #dee2e6; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn text="Время" prefWidth="80"/>
                        <TableColumn text="Зал" prefWidth="60"/>
                        <TableColumn text="Цена" prefWidth="60"/>
                        <TableColumn text="Свободно" prefWidth="60"/>
                    </columns>
                </TableView>

                <VBox spacing="5"
                      style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                    <Label text="Информация о сеансе"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="selectedFilmInfo" text="Фильм: не выбран"/>
                    <Label fx:id="selectedShowtimeInfo" text="Время: не выбрано"/>
                    <Label fx:id="selectedHallInfo" text="Зал: не выбран"/>
                    <Label fx:id="selectedPriceInfo" text="Цена: -- руб."/>
                </VBox>

                <Button text="Показать доступные места"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="250"/>

            </VBox>

            <!-- Правая панель: выбор места -->
            <VBox spacing="15" padding="15">

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="3. Выберите место"
                           style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Label text="Экран"
                           style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 5; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 3;"/>
                </HBox>

                <!-- Схема зала -->
                <ScrollPane fitToWidth="true"
                            style="-fx-background-color: #34495e; -fx-padding: 20; -fx-border-radius: 10;">
                    <VBox fx:id="hallLayoutContainer"
                          spacing="10" alignment="CENTER">
                        <!-- Динамически генерируемые места будут здесь -->
                        <Label text="Выберите сеанс для отображения схемы зала"
                               style="-fx-text-fill: white; -fx-font-style: italic;"/>
                    </VBox>
                </ScrollPane>

                <!-- Легенда мест -->
                <HBox spacing="20" alignment="CENTER">
                    <HBox spacing="5" alignment="CENTER">
                        <Rectangle width="20" height="20"
                                   style="-fx-fill: #2ecc71; -fx-stroke: #27ae60;"/>
                        <Label text=" - Свободно"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Rectangle width="20" height="20"
                                   style="-fx-fill: #e74c3c; -fx-stroke: #c0392b;"/>
                        <Label text=" - Занято"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Rectangle width="20" height="20"
                                   style="-fx-fill: #3498db; -fx-stroke: #2980b9;"/>
                        <Label text=" - Выбрано"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Rectangle width="20" height="20"
                                   style="-fx-fill: #f39c12; -fx-stroke: #d35400;"/>
                        <Label text=" - VIP"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Rectangle width="20" height="20"
                                   style="-fx-fill: #34495e; -fx-stroke: #2c3e50;"/>
                        <Label text=" - Недоступно"/>
                    </HBox>
                </HBox>

                <!-- Выбранные места -->
                <VBox spacing="5"
                      style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                    <Label text="Выбранные места:"
                           style="-fx-font-weight: bold;"/>
                    <ListView fx:id="selectedSeatsListView"
                              prefHeight="80"/>
                    <HBox spacing="10">
                        <Label text="Количество:"/>
                        <Label fx:id="selectedSeatsCount" text="0"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label text="Итоговая цена:"/>
                        <Label fx:id="totalPriceLabel" text="0.00 руб."
                               style="-fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                    </HBox>
                </VBox>

            </VBox>

        </SplitPane>
    </center>

    <bottom>
        <VBox spacing="10" padding="15"
              style="-fx-background-color: #ecf0f1; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">

            <Label text="4. Данные клиента"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

            <HBox spacing="15">
                <VBox spacing="5">
                    <Label text="ФИО клиента:"/>
                    <TextField fx:id="customerNameField"
                               promptText="Иванов Иван Иванович"
                               prefWidth="250"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Телефон:"/>
                    <TextField fx:id="customerPhoneField"
                               promptText="+7 (999) 123-45-67"
                               prefWidth="200"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Email (необязательно):"/>
                    <TextField fx:id="customerEmailField"
                               promptText="client@example.com"
                               prefWidth="250"/>
                </VBox>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <CheckBox fx:id="saveCustomerCheckbox"
                          text="Сохранить клиента в базе"
                          selected="true"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Очистить форму"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                <Button text="Бронировать"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="120"/>
                <Button text="Купить сейчас"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="120"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>