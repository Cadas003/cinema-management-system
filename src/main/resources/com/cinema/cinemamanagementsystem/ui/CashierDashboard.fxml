<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cinema.cinemamanagementsystem.ui.controllers.CashierDashboardController"
      spacing="16" stylesheets="@/com/cinema/cinemamanagementsystem/ui/style.css">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <Label text="КиноСфера — Кассир" styleClass="title" />
    <TabPane VBox.vgrow="ALWAYS">
        <tabs>
            <Tab text="Операции">
                <content>
                    <VBox spacing="12" padding="10">
                        <GridPane hgap="10" vgap="10">
                            <Label text="ID сеанса:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                            <TextField fx:id="showtimeIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                            <Label text="ID места:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                            <TextField fx:id="seatIdField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                            <Label text="ID клиента:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                            <TextField fx:id="customerIdField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                            <Label text="ID кассира:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                            <TextField fx:id="userIdField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                            <Label text="Метод оплаты:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                            <TextField fx:id="paymentMethodField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                            <Label text="ID билета:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                            <TextField fx:id="ticketIdField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                        </GridPane>

                        <VBox spacing="8">
                            <Button text="Загрузить занятые места" onAction="#handleLoadOccupiedSeats" />
                            <Button text="Создать бронь" onAction="#handleReserveTicket" />
                            <Button text="Прямая покупка" onAction="#handleDirectPurchase" />
                            <Button text="Оплатить бронь" onAction="#handleConfirmReservation" />
                            <Button text="Возврат" onAction="#handleRefund" />
                        </VBox>

                        <Label text="Занятые места:" />
                        <TextArea fx:id="occupiedSeatsArea" prefRowCount="4" />
                    </VBox>
                </content>
            </Tab>
            <Tab text="Клиенты">
                <content>
                    <Label text="Поиск и создание клиентов (реализовать в отдельной форме)." />
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
