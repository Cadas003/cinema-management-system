<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinema.cinemamanagementsystem.controllers.CashierController"
            prefHeight="800.0" prefWidth="1200.0">

    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="Кинотеатр 'КиноСфера' - Панель кассира"
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <HBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                    <Label fx:id="welcomeLabel" text="Кассир: "
                           style="-fx-text-fill: white;"/>
                    <Label fx:id="currentTimeLabel"
                           style="-fx-text-fill: #bdc3c7;"/>
                    <Button text="Выйти" onAction="#handleLogout"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>
            </HBox>

            <MenuBar>
                <Menu text="Файл">
                    <MenuItem text="Выйти" onAction="#handleLogout"/>
                </Menu>
                <Menu text="Справка">
                    <MenuItem text="О программе"/>
                    <MenuItem text="Инструкция"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">

            <!-- Вкладка продажи -->
            <Tab text="Продажа билетов">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <!-- ВЫБОР ДАТЫ -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Выберите дату:"
                                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                            <DatePicker fx:id="datePicker" prefWidth="200"/>
                            <Label fx:id="totalSelectedLabel" text="Выбрано: 0 мест | Итого: 0.00 руб."
                                   style="-fx-font-weight: bold; -fx-text-fill: #e74c3c; -fx-font-size: 14px;"/>
                        </HBox>

                        <HBox spacing="20">
                            <!-- ЛЕВАЯ КОЛОНКА: Фильмы и сеансы -->
                            <VBox spacing="10" prefWidth="650">
                                <Label text="Фильмы и сеансы на выбранную дату:"
                                       style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                                <!-- КАРТОЧКИ ФИЛЬМОВ -->
                                <ScrollPane prefHeight="250" style="-fx-background-color: transparent;">
                                    <TilePane fx:id="filmsTilePane"
                                              hgap="15" vgap="15"
                                              prefTileWidth="250"
                                              prefTileHeight="150"
                                              style="-fx-padding: 10;"/>
                                </ScrollPane>

                                <Label text="Информация о выбранном сеансе:"
                                       style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                                <VBox spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                                    <Label fx:id="selectedFilmLabel" text="Фильм: " style="-fx-font-weight: bold;"/>
                                    <Label fx:id="selectedDateTimeLabel" text="Время: " style="-fx-font-weight: bold;"/>
                                    <Label fx:id="selectedHallLabel" text="Зал: " style="-fx-font-weight: bold;"/>
                                    <Label fx:id="selectedPriceLabel" text="Цена: " style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                                </VBox>

                                <Label text="Выбор места:"
                                       style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                                    <GridPane fx:id="seatGrid"
                                              hgap="5" vgap="5"/>

                            </VBox>

                            <!-- ПРАВАЯ КОЛОНКА: Данные клиента -->
                            <VBox spacing="15" prefWidth="350">
                                <Label text="Данные клиента:"
                                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>

                                <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 5;">
                                    <Label text="Тип клиента:" style="-fx-font-weight: bold;"/>
                                    <VBox spacing="6">
                                        <RadioButton fx:id="guestCustomerRadio" text="Гость"/>
                                        <RadioButton fx:id="existingCustomerRadio" text="Существующий клиент"/>
                                    </VBox>

                                    <VBox fx:id="existingCustomerBox" spacing="10">
                                        <Label text="Поиск клиента:" style="-fx-font-weight: bold;"/>
                                        <HBox spacing="8">
                                            <TextField fx:id="existingCustomerSearchField"
                                                       promptText="Имя, телефон или email"
                                                       prefWidth="220"/>
                                            <Button fx:id="existingCustomerSearchButton"
                                                    text="Найти"/>
                                            <Button fx:id="existingCustomerClearSearchButton"
                                                    text="Сбросить"/>
                                        </HBox>

                                        <TableView fx:id="existingCustomersTable" prefHeight="160">
                                            <columns>
                                                <TableColumn fx:id="existingCustomerNameColumn" text="ФИО" prefWidth="140"/>
                                                <TableColumn fx:id="existingCustomerPhoneColumn" text="Телефон" prefWidth="120"/>
                                            </columns>
                                        </TableView>

                                        <Label fx:id="selectedExistingCustomerLabel"
                                               text="Клиент не выбран"
                                               style="-fx-text-fill: #7f8c8d;"/>
                                        <Button fx:id="clearExistingCustomerButton" text="Сбросить выбор"/>
                                    </VBox>
                                </VBox>

                                <Label text="Тип операции:"
                                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>

                                <HBox spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 5;">
                                    <VBox spacing="5">
                                        <RadioButton fx:id="immediateSaleRadio"
                                                     text="Немедленная продажа"
                                                     selected="true"/>
                                        <Label text="Билет сразу продается" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                                    </VBox>
                                    <VBox spacing="5">
                                        <RadioButton fx:id="bookingRadio"
                                                     text="Бронирование"/>
                                        <Label text="Бронь на 15 минут" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>
                                    </VBox>
                                </HBox>

                                <Label text="Способ оплаты:"
                                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2c3e50;"
                                       visible="false"
                                       managed="false"
                                       fx:id="paymentMethodLabel"/>

                                <ComboBox fx:id="paymentMethodCombo"
                                          prefWidth="200"
                                          visible="false"
                                          managed="false"/>

                                <HBox spacing="10" alignment="CENTER">
                                    <Button fx:id="sellTicketButton"
                                            text="ПРОДАТЬ БИЛЕТЫ"
                                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                                            prefWidth="160" prefHeight="40"/>

                                    <Button fx:id="bookTicketButton"
                                            text="ЗАБРОНИРОВАТЬ"
                                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"
                                            prefWidth="160" prefHeight="40"/>
                                </HBox>

                                <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #e8f5e9; -fx-border-radius: 5;">
                                    <Label text="ПОДСКАЗКА:" style="-fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                                    <Label text="1. Выберите дату → 2. Выберите фильм и время → 3. Выберите места → 4. Заполните данные клиента"
                                           style="-fx-text-fill: #2c3e50; -fx-font-size: 12px;" wrapText="true"/>
                                </VBox>
                            </VBox>
                        </HBox>
                    </VBox>
                </ScrollPane>
            </Tab>

            <!-- Вкладка бронирования -->
            <Tab text="Бронирования">
                <VBox spacing="10">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Активные бронирования"
                               style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                        <Label text="(автообновление каждую минуту)"
                               style="-fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <TableView fx:id="bookingsTable" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="bookingIdColumn" text="№" prefWidth="50"/>
                            <TableColumn fx:id="bookingFilmColumn" text="Фильм" prefWidth="200"/>
                            <TableColumn fx:id="bookingTimeColumn" text="Время брони" prefWidth="100"/>
                            <TableColumn fx:id="bookingSeatColumn" text="Место" prefWidth="150"/>
                            <TableColumn fx:id="bookingCustomerColumn" text="Клиент" prefWidth="150"/>
                            <TableColumn fx:id="bookingStatusColumn" text="Статус" prefWidth="150"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10">
                        <Button fx:id="confirmBookingButton"
                                text="Подтвердить бронирование"
                                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"
                                prefWidth="200"/>
                        <Button fx:id="cancelBookingButton"
                                text="Отменить бронирование"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                                prefWidth="200"/>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Вкладка клиенты -->
            <Tab text="Клиенты">
                <VBox spacing="10">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                        <Label text="Регистрация клиента"
                               style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ФИО:" prefWidth="80"/>
                            <TextField fx:id="registerNameField"
                                       promptText="Введите ФИО"
                                       prefWidth="240"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Телефон:" prefWidth="80"/>
                            <TextField fx:id="registerPhoneField"
                                       promptText="+7XXXXXXXXXX"
                                       prefWidth="240"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Email:" prefWidth="80"/>
                            <TextField fx:id="registerEmailField"
                                       promptText="email@example.com"
                                       prefWidth="240"/>
                        </HBox>

                        <Button fx:id="registerCustomerButton"
                                text="Зарегистрировать"
                                prefWidth="160"/>
                    </VBox>

                    <HBox spacing="10">
                        <TextField fx:id="customerSearchField"
                                   promptText="Поиск по имени, телефону или email"
                                   prefWidth="300"/>
                        <Button fx:id="searchCustomerButton" text="Найти"/>
                    </HBox>

                    <TableView fx:id="customersTable" prefHeight="500">
                        <columns>
                            <TableColumn fx:id="customerIdColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="customerNameColumn" text="ФИО" prefWidth="200"/>
                            <TableColumn fx:id="customerPhoneColumn" text="Телефон" prefWidth="150"/>
                            <TableColumn fx:id="customerVisitsColumn" text="Посещений" prefWidth="80"/>
                            <TableColumn fx:id="customerTotalColumn" text="Всего потрачено" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Вкладка возвраты -->
            <Tab text="Возвраты">
                <VBox spacing="20">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
                        <Label text="Оформление возврата"
                               style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Номер билета:" prefWidth="100"/>
                            <TextField fx:id="refundTicketIdField"
                                       promptText="Введите номер билета"
                                       prefWidth="150"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Причина возврата:" prefWidth="100"/>
                            <TextField fx:id="refundReasonField"
                                       promptText="Укажите причину возврата"
                                       prefWidth="300"/>
                        </HBox>

                        <Button fx:id="refundButton"
                                text="Оформить возврат"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                                prefWidth="150"/>
                    </VBox>

                    <VBox spacing="10">
                        <Label text="Недавние продажи"
                               style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <TableView fx:id="recentTicketsTable" prefHeight="300">
                            <!-- Колонки для недавних билетов -->
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

        </TabPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Label text="Статус: "/>
            <Label text="Готов к работе" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="© 2025 Кинотеатр 'КиноСфера'. Версия 1.0"/>
        </HBox>
    </bottom>

</BorderPane>
