<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.Font?>
        <?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cinema.cinemamanagementsystem.controllers.FilmManagementController"
            prefHeight="600.0" prefWidth="800.0">

<top>
    <HBox spacing="10" alignment="CENTER_LEFT"
          style="-fx-background-color: #2c3e50; -fx-padding: 10;">
        <Label text="Управление фильмами"
               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
    </HBox>
</top>

<center>
    <VBox spacing="10" padding="20">
        <!-- Панель поиска и фильтров -->
        <HBox spacing="10">
            <TextField fx:id="searchField"
                       promptText="Поиск фильма..."
                       prefWidth="300"/>
            <ComboBox fx:id="genreFilter"
                      promptText="Все жанры"
                      prefWidth="150"/>
            <Button text="Найти"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Сбросить фильтры"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Добавить фильм"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;"
                    onAction="#showAddFilmDialog"/>
        </HBox>

        <!-- Таблица фильмов -->
        <TableView fx:id="filmsTable" prefHeight="400">
            <columns>
                <TableColumn text="ID" prefWidth="50"
                             cellValueFactory="{filmId}"/>
                <TableColumn text="Название" prefWidth="200"
                             cellValueFactory="{title}"/>
                <TableColumn text="Жанр" prefWidth="120"
                             cellValueFactory="{genreName}"/>
                <TableColumn text="Длительность" prefWidth="100"
                             cellValueFactory="{duration}"/>
                <TableColumn text="Описание" prefWidth="250"
                             cellValueFactory="{description}"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <!-- Панель действий -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Просмотреть"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"
                    onAction="#viewFilmDetails"/>
            <Button text="Редактировать"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;"
                    onAction="#editSelectedFilm"/>
            <Button text="Удалить"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                    onAction="#deleteSelectedFilm"/>
            <Button text="Назначить сеансы"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white;"
                    onAction="#scheduleShowtimes"/>
        </HBox>
    </VBox>
</center>

<bottom>
    <HBox spacing="10" alignment="CENTER"
          style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
        <Label fx:id="statusLabel" text="Всего фильмов: 0"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Закрыть" onAction="#closeWindow"/>
    </HBox>
</bottom>

</BorderPane>